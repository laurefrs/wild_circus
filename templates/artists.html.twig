{% extends 'base.html.twig' %}

{% block title %}Artists index{% endblock %}

{% block body %}
    <h1>Liste des artistes</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Categorie</th>
            <th>Image</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.category.id }}</td>
                <td><img src="{{ artist.picture }}" alt="pic"></td>
                <td>{{ artist.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun artiste trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}