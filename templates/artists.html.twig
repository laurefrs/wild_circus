{% extends 'layout/base.html.twig' %}

{% block content %}
    <h1>Nos fabuleux artistes</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Categorie</th>
            <th>Image</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.name }}</td>
                <td>{{ artist.category.name }}</td>
                <td><img src="{{ artist.picture }}" alt="pic"></td>
                <td>{{ artist.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun artiste trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('home') }}" class="previous round">&#8249;</a>

{% endblock %}

